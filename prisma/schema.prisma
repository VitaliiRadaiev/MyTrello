// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserModel {
  id Int @id @default(autoincrement())
  email String @unique
  login String
  password String
  profilePhoto String?
  createdBoards BoardModel[]
  participantOfBoards ParticipantsModel[]
  messages MessageModel[]
  readMessages MessageReadStatusModel[]
}

model BoardModel {
  id Int @id @default(autoincrement())
  name String
  createdBy UserModel @relation(fields: [createdById], references: [id])
  createdById Int
  previewImage String?
  participants ParticipantsModel?
  columns ColumnModel[]
}

model ParticipantsModel {
  id Int @id @default(autoincrement())
  board BoardModel @relation(fields: [boardId], references: [id])
  boardId Int @unique
  users UserModel[]
}

model ColumnModel {
  id        Int    @id @default(autoincrement())
  name      String
  board     BoardModel  @relation(fields: [boardId], references: [id])
  boardId   Int
  order     Int
  cards     CardModel[]
}

model CardModel {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  column      ColumnModel  @relation(fields: [columnId], references: [id])
  columnId    Int @unique
  order       Int
  photos      CardPhotoModel[]
  messages    MessageModel[]
}

model CardPhotoModel {
  id          Int      @id @default(autoincrement())
  photo String
  card CardModel @relation(fields: [cardId], references: [id])
  cardId Int @unique
}

model MessageModel {
  id             Int      @id @default(autoincrement())
  text           String
  user           UserModel     @relation(fields: [userId], references: [id])
  userId         Int
  card           CardModel     @relation(fields: [cardId], references: [id])
  cardId         Int
  readStatuses   MessageReadStatusModel[]
}

model MessageReadStatusModel {
  id        Int      @id @default(autoincrement())
  messageId Int
  userId    Int
  isRead    Boolean
  message   MessageModel @relation(fields: [messageId], references: [id])
  user      UserModel    @relation(fields: [userId], references: [id])
}